{
  "name": "@king-prawns/pine-runner",
  "version": "1.0.7",
  "description": "PiNE Runner",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pinerunner": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/king-prawns/PiNE.git"
  },
  "author": "king-prawns",
  "license": "MIT",
  "scripts": {
    "cp:shared": "ts-node-dev ./config/webpack/copy.ts",
    "prebuild": "rm -rf ./dist",
    "build": "tsc -project ./config/typescript/tsconfig.json",
    "lint": "eslint --config ../config/eslint/.eslintrc ./src/**/*.ts",
    "prettier": "prettier --config ../config/prettier/.prettierrc --list-different src/**/*.ts --ignore-path ../config/prettier/.prettierignore",
    "typecheck": "tsc -project ./config/typescript/tsconfig.json --noEmit",
    "test": "jest --config=./config/jest/jest.config.js --silent"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.3",
    "@types/sinon": "10.0.6",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "chalk": "4.1.2",
    "eslint": "8.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "fs-extra": "10.0.0",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "puppeteer-core": "13.1.0",
    "sinon": "12.0.1",
    "ts-jest": "27.0.7",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.2"
  },
  "peerDependencies": {
    "puppeteer-core": "^13.0.1"
  },
  "dependencies": {
    "fast-glob": "3.2.11"
  }
}
