{
  "name": "@king-prawns/pine",
  "version": "1.4.0",
  "description": "Raspberry Pi Network Emulator",
  "main": "dist/bundle.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/king-prawns/PiNE.git"
  },
  "author": "king-prawns",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/king-prawns/PiNE/issues"
  },
  "homepage": "https://github.com/king-prawns/PiNE#readme",
  "scripts": {
    "clean": "rm -rf ./dist",
    "dev": "ts-node-dev ./src/index.ts",
    "build": "npm run clean && webpack build --config ./config/webpack/webpack.config.js",
    "lint": "eslint --config ./config/eslint/.eslintrc ./src/**/*.ts",
    "prettier": "prettier --config ./config/prettier/.prettierrc --list-different src/**/*.ts --ignore-path ./config/prettier/.prettierignore",
    "typecheck": "tsc --project ./config/typescript/tsconfig.typecheck.json",
    "test": "jest --config=./config/jest/jest.config.js --silent",
    "start": "npm run build && node dist/bundle.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --config ./config/prettier/.prettierrc",
      "eslint --config ./config/eslint/.eslintrc --no-error-on-unmatched-pattern --fix"
    ]
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.9",
    "@types/sinon": "10.0.6",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "eslint": "8.1.0",
    "husky": "4.3.8",
    "jest": "27.3.1",
    "lint-staged": "11.2.6",
    "prettier": "2.4.1",
    "sinon": "11.1.2",
    "ts-jest": "27.0.7",
    "ts-loader": "9.2.6",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.4",
    "webpack": "5.61.0",
    "webpack-cli": "4.9.1"
  },
  "dependencies": {
    "axios": "0.24.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "fast-xml-parser": "3.21.1"
  }
}
